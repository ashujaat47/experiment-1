<body>
  <div class="container">
    <h1>My Bank</h1>
    <div class="balance" id="balance">$0.00</div>
    <input type="number" id="amount" placeholder="Enter amount" min="0" step="0.01" />
    <div class="buttons">
      <button class="deposit" id="depositBtn">Deposit</button>
      <button class="withdraw" id="withdrawBtn">Withdraw</button>
    </div>
    <div class="error" id="errorMsg"></div>
  </div>

  <script>
    const balanceEl = document.getElementById('balance');
    const amountInput = document.getElementById('amount');
    const depositBtn = document.getElementById('depositBtn');
    const withdrawBtn = document.getElementById('withdrawBtn');
    const errorMsg = document.getElementById('errorMsg');

    let balance = 0;

    // Format number as currency
    function formatCurrency(num) {
      return '$' + num.toFixed(2);
    }

    // Update balance display
    function updateBalance() {
      balanceEl.textContent = formatCurrency(balance);
    }

    // Validate input amount
    function validateAmount(value) {
      if (value === '') {
        errorMsg.textContent = 'Please enter an amount.';
        return false;
      }
      const amount = parseFloat(value);
      if (isNaN(amount) || amount <= 0) {
        errorMsg.textContent = 'Enter a positive number greater than zero.';
        return false;
      }
      return true;
    }

    // Deposit handler
    depositBtn.addEventListener('click', () => {
      errorMsg.textContent = '';
      const amountValue = amountInput.value.trim();
      if (!validateAmount(amountValue)) return;

      const amount = parseFloat(amountValue);
      balance += amount;
      updateBalance();
      amountInput.value = '';
    });

    // Withdraw handler
    withdrawBtn.addEventListener('click', () => {
      errorMsg.textContent = '';
      const amountValue = amountInput.value.trim();
      if (!validateAmount(amountValue)) return;

      const amount = parseFloat(amountValue);
      if (amount > balance) {
        errorMsg.textContent = 'Insufficient funds.';
        return;
      }
      balance -= amount;
      updateBalance();
      amountInput.value = '';
    });

    // Initialize balance display
    updateBalance();
  </script>
</body>
</html>
