      align-items: center;
      min-height: 100vh;
    }

    .container {
      background: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
      width: 350px;
      max-width: 90vw;
      text-align: center;
    }

    h1 {
      margin-bottom: 20px;
      color: #2c3e50;
    }

    .balance {
      font-size: 2rem;
      margin-bottom: 20px;
      color: #27ae60;
    }

    input[type="number"] {
      padding: 10px;
      width: 70%;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 5px;
      margin-bottom: 15px;
      outline: none;
      transition: border-color 0.3s ease;
    }

    input[type="number"]:focus {
      border-color: #2980b9;
    }

    .buttons {
      display: flex;
      justify-content: space-around;
    }

    button {
      padding: 10px 20px;
      font-size: 1rem;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      color: white;
      transition: background-color 0.3s ease;
      width: 40%;
    }

    button.deposit {
      background-color: #27ae60;
    }

    button.deposit:hover {
      background-color: #219150;
    }

    button.withdraw {
      background-color: #c0392b;
    }

    button.withdraw:hover {
      background-color: #992d22;
    }

    .error {
      color: #e74c3c;
      margin-top: 10px;
      font-size: 0.9rem;
      min-height: 18px;
    }

    /* Responsive */
    @media (max-width: 400px) {
      .container {
        width: 100%;
